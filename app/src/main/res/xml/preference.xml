<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/function"
        android:layout="@layout/preference_category_layout">
        <SwitchPreference
            android:defaultValue="false"
            android:key="auto_reversal"
            android:title="@string/auto_reversal"
            android:layout="@layout/preference_switch_layout"/>
        <SwitchPreference
            android:defaultValue="false"
            android:key="allow_mobile_play"
            android:title="@string/allow_mobile_play"
            android:layout="@layout/preference_switch_layout"/>
        <SwitchPreference
            android:defaultValue="false"
            android:key="allow_mobile_download"
            android:title="@string/allow_mobile_download"
            android:layout="@layout/preference_switch_layout"/>
        <Preference
            android:key="settings_mock_data"
            android:title="@string/use_mock_data"
            android:layout="@layout/preference_arrowl_layout"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/cache"
        android:layout="@layout/preference_category_layout">
        <Preference
            android:key="settings_clear_lrc_cache"
            android:title="@string/clear_cache"
            android:layout="@layout/preference_normal_layout"/>
        <Preference
            android:key="settings_scan_filter"
            android:title="扫描设置"
            android:layout="@layout/preference_normal_layout"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/other"
        android:layout="@layout/preference_category_layout">
        <Preference
            android:key="settings_about_author"
            android:title="@string/about_author"
            android:layout="@layout/preference_normal_layout"/>
    </PreferenceCategory>

</PreferenceScreen>
